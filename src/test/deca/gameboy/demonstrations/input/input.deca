#include "GameBoy.decah"
#include "Ball.deca"

{
    int x;
    int y;
    int vitx;
    int vity;
    Ball ball = new Ball();

    GameBoy gb = new GameBoy();
    gb.init();
    x = 8;
    y = 10;
    vitx = 0;
    vity = 0;

    ball.init(gb, x, y, vitx, vity, gb.LIGHT);
    gb.setBackgroundColor(gb.DARK);
    while(true) {
        if (gb.keyIsPressed(gb.UP_KEY)) {
            ball.setVity(1);
            ball.setDown(false);
        }
        if (gb.keyIsPressed(gb.DOWN_KEY)) {
            ball.setVity(1);
            ball.setDown(true);
        }
        if (gb.keyIsPressed(gb.LEFT_KEY)) {
            ball.setVitx(1);
            ball.setForward(false);
        }
        if (gb.keyIsPressed(gb.RIGHT_KEY)) {
            ball.setVitx(1);
            ball.setForward(true);
        }
        ball.moveAndDraw();
        ball.setVitx(0);
        ball.setVity(0);
        gb.updateScreen();
    }
}