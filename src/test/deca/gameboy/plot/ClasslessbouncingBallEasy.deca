#include "GameBoy.java"

{
    int x;
    int oldX;
    int oldY;
    int y;
    int vitx;
    int vity;
    boolean forward = true;
    boolean up = true;
    boolean updated = false;
    GameBoy gb = new GameBoy();
    x = 10;
    y = 10;
    vitx = 1;
    vity = 1;
    gb.init();
    //gb.setTile(125, 1, 1);
    gb.setBackgroundColor(gb.DARK);
    while(true) {
        updated = gb.updateScreen();
        if (updated) {
            if(x == 0 || x == gb.WIDTH - 1) {
                forward = !forward;
            }
            if(y == 0 || y == gb.HEIGHT - 1) {
                up = !up;
            }
            oldX = x;
            oldY = y;

            if(forward) {
                x = x + vitx;
            } else {
                x = x - vitx;
            }
            if(up) {
                y = y + vity;
            } else {
                y = y - vity;
            }
            gb.setColor(gb.WHITE, x, y);
            gb.sleep(3);
            gb.setColor(gb.DARK, oldX, oldY);
        }
    }

